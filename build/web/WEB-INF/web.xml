        <servlet-class>pe.edu.unmsm.sistemas.agregar</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>agregar</servlet-name>
        <url-pattern>/agregar.do</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>verCarrito</servlet-name>
        <servlet-class>pe.edu.unmsm.sistemas.verCarrito</servlet-class>
    </servlet>
