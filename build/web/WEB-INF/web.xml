        <url-pattern>/eliminar.do</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>logear</servlet-name>
        <servlet-class>pe.edu.unmsm.sistemas.logear</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>logear</servlet-name>
        <url-pattern>/logear.do</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>pe.edu.unmsm.sistemas.logout</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout.do</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
